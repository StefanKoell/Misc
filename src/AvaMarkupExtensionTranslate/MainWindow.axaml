<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markupExtensions="clr-namespace:AvaMarkupExtensionTranslate.MarkupExtensions"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaMarkupExtensionTranslate.MainWindow"
        Title="AvaMarkupExtensionTranslate">
    
    <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="*,Auto,*">
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" Spacing="8">

            <TextBlock TextAlignment="Center" Text="{markupExtensions:UIString Text=Welcome}" />
            
            <StackPanel Orientation="Horizontal" Spacing="8">
                
                <Button Content="{markupExtensions:UIString Text=English}" Click="ButtonEnglish_OnClick" />
                <Button Content="{markupExtensions:UIString Text=German}" Click="ButtonGerman_OnClick" />
                
            </StackPanel>
        
        </StackPanel>
    </Grid>
</Window>
